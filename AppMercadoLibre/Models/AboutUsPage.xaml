        <Label
            Margin="20"
            Text="Programmer data"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Grid Grid.Row="1" RowDefinitions="*,*,*"
              RowSpacing="5">
            <Label
                Text="Name: Antonio Paez Vangel" 
                VerticalOptions="Center" 
                HorizontalOptions="Center"></Label>

            <Label 
                Grid.Row="1"
                Text="Email: antoniopaezvangel@gmail.com" 
                VerticalOptions="Center" 
                HorizontalOptions="Center"></Label>
            <Label 
                Grid.Row="2"
                Text="Phone:  +54 2954 233222" 
                VerticalOptions="Center" 
                HorizontalOptions="Center"></Label>

        </Grid>

        <Image Grid.Row="2" Source="programador.png"></Image>

        <Button Grid.Row="3"  Text="Back" TextColor="Black" Clicked="OnBackClicked" BackgroundColor="Yellow"></Button>

    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMercadoLibre.Models.InfoPage"
             Title="InfoPage"
             BackgroundColor="Yellow">
    <Grid RowDefinitions=".1*,.1*,.1*,.6*,.1*">
        <Button Grid.Row="0" Margin="10" Text="About us" TextColor="Black" BackgroundColor="Yellow" Clicked="OnAboutUsClicked" ></Button>
        <Image Grid.Row="1" Source="logo.png"></Image>
        <Label 
            Grid.Row="2"
            Text="Mercado Libre is an Argentine multinational company 
            dedicated to electronic commerce in Latin America, 
            with headquarters in Montevideo, Uruguay."
            TextColor="Black"
            Margin="10"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Grid.Row="3" Source="mercadolibre.png"></Image>
        <Button Grid.Row="4" Text="Log out" TextColor="Black" BackgroundColor="Yellow" Clicked="OnLogOutClicked"></Button>
    </Grid>
    
</ContentPage>